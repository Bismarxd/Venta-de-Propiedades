extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Ubicaciónes en el Mapa 

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-xl uppercase text-zinc-950 font-bold") Filtrar Propiedades

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-teal-950 font-extrabold") Categorías
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-emerald-950 rounded-lg shadow")
                    option(value="") --Seleccione--
                    each categoria in categorias 
                        option(value=categoria.id)= categoria.nombre 

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-teal-950 font-extrabold") Precios
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-emerald-950 rounded-lg shadow")
                    option(value="") --Seleccione--
                    each precio in precios 
                        option(value=precio.id)= precio.nombre 

        div(id="mapa-inicio" class="h-[80rem] mt-10")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta

            //- pre= JSON.stringify(usuario, undefined, 2)
            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-10")
                
                each propiedad in casas 
                    if propiedad.publicado
                        include ./templates/card
    
        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en Venta

            //- pre= JSON.stringify(departamentos, undefined, 2)
            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-10")
                each propiedad in departamentos 
                    if propiedad.publicado
                        include ./templates/card


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")