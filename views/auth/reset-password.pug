extends ../layout/index

block  contenido

    div(class="py-10 text-slate-900")
        h1(class="text-4xl my-10 font-extrabold text-center") Venta de
            span(class="font-normal text-slate-600")  Propiedades
        h2(class= "text-center text-3xl font-extrabold")= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-700 p-2 text-white uppercase text-xs text-center mb-1 font-bold")= error.msg


        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-slate-600 py-8 px-4 shadow-md")

                form(class="" method="POST" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label(for="password" class="block text-base uppercase text-white mb-2 font-bold mt-5") Ingresa tu Nueva Contraseña
                        input(type="password" id="password" class="w-full px-3 py-2 border-gray-300 rounded-md placeholder-slate-400" placeholder="Tu Nueva Contraseña" name="password")          
                   

                    input(class="mt-5 w-full bg-blue-500 hover:bg-blue-700 hover:cursor-pointer text-white font-bold py-2 px-4 rounded" type="submit" value="Guardar Contraseña")