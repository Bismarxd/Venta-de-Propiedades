extends ../layout/index

block  contenido

    div(class="py-10 text-slate-900")
        h1(class="text-4xl my-10 font-extrabold text-center") Venta de
            span(class="font-normal text-slate-600")  Propiedades
        h2(class= "text-center text-3xl font-extrabold")= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-700 p-2 text-white uppercase text-xs text-center mb-1 font-bold")= error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-slate-600 py-8 px-4 shadow-md")
                form(class="" method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label(for="nombre" class="block text-base uppercase text-white mb-2 font-bold") Nombre
                        input(type="text" id="nombre" class="w-full px-3 py-2 border-gray-300 rounded-md placeholder-slate-400" placeholder="Tu Nombre" name='nombre' value=usuario ? usuario.nombre : '')

                    div 
                        label(for="email" class="block text-base uppercase text-white mb-2 font-bold mt-5") E-mail
                        input(type="email" id="email" class="w-full px-3 py-2 border-gray-300 rounded-md placeholder-slate-400" placeholder="Tu Correo Electronico" name="email" value=usuario ? usuario.email : '')

                    div 
                        label(for="password" class="block text-base uppercase text-white mb-2 font-bold mt-5") Password
                        input(type="password" id="password" class="w-full px-3 py-2 border-gray-300 rounded-md placeholder-slate-400" placeholder="Tu Contraseña" name="password")

                    div 
                        label(for="repetirpassword" class="block text-base uppercase text-white mb-2 font-bold mt-5") Repetir Password
                        input(type="password" id="repetirpassword" class="w-full px-3 py-2 border-gray-300 rounded-md placeholder-slate-400" placeholder="Repite tu Password" name="repetirpassword")

                    div(class="flex items-center justify-between mt-5")
                        a(href="/auth/login" class="text-gray-400 text-sm hover:text-white") ¿Ya tienes Cuenta? Iniciar Sesión
                        a(href="/auth/olvide-password" class="text-gray-400 text-sm hover:text-white") Olvide mi Password
                        
                    input(class="mt-5 w-full bg-blue-500 hover:bg-blue-700 hover:cursor-pointer text-white font-bold py-2 px-4 rounded" type="submit" value="Crear Cuenta")

