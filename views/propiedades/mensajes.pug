extends ../layout/admin

block  contenido
    h2(class="text-4xl font-extrabold my-10 text-center") Mensajes

    a(href="/mis-propiedades" class="rounded py-2 px-3 bg-emerald-950 text-white font-medium text-xl text-center uppercase inline-block my-5 w-full sm:w-auto") volver 

    //- pre= JSON.stringify(mensajes, undefined, 2)

    div(class="mx-auto max-w-6xl bg-emerald-700 shadow")

        if mensajes.length
            ul 
                each mensaje in mensajes 
                    li(class="border-zinc-950 border-b p-5 space-y-5")
                        p(class="font-bold text-white text-xl") Nombre: 
                            span(class="font-normal")= mensaje.usuario.nombre

                        p(class="font-bold text-white text-xl") Email: 
                            span(class="font-normal")= mensaje.usuario.email

                        p(class="font-bold text-white text-xl") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje

                        p(class="font-bold text-white text-xl") Enviado: 
                            span(class="font-normal")= formatearFecha(mensaje.createdAt)

        else 
            p(class="text-center text-2xl font-bold text-gray-200 p-5") No Hay Mensajes 